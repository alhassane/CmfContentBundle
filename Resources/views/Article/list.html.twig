<h1 class="tt2">Nos 6 derniers articles</h1>

<div class="listResults" id="paging_container">
<ul class="content cf">
{% for article in articles %}
    <li>
        <article class="article cf">
            <figure class="cf">

                <a href="{{ app.request.schemeAndHttpHost }}/{{article.blocgeneral.type }}/{{ article.blocgeneral.mainrub }}/{{ article.blocgeneral.subrub }}/{{ article.blocgeneral.slug }}.html" class="fleft">
                    {% if article.blocgeneral.media.image.id is defined %}
                        <img width="160" height="98" alt="{{ clean_name(article.blocgeneral.media.image.name) }}" src="{{ media_url(article.blocgeneral.media.image.id, 'sous_rubrique', true, article.blocgeneral.media.getUpdatedAt(), 'article_small_') }}"/>
                    {% endif %}
                </a>
                <figcaption class="fright">
                    <a href="{{ app.request.schemeAndHttpHost }}/{{article.blocgeneral.type }}/{{ article.blocgeneral.mainrub }}/{{ article.blocgeneral.subrub }}/{{ article.blocgeneral.slug }}.html">
                        <span class="arrowLeft"></span>
                        <h3 class="tt5">{{ article.blocgeneral.title|striptags|lower|ucfirst }}</h3>
                        <p>{{ article.blocgeneral.descriptif|striptags|truncateText(150, '...')|raw }}</p>
                    </a>
                </figcaption>
            </figure>
            <footer><p>Ajout&eacute; le {{ article.blocgeneral.publishedat|localedate('long','medium', locale, 'EEEE d LLLL y')|ucfirst }} </p></footer>
        </article>
    </li>
{% endfor %}
</ul>
</div>

<div class="paging cf">
{% if (pagination_article is defined) %}
    {{ knp_pagination_render(pagination_article, 'PiAppTemplateBundle:Template\\pagination:paginator.tag.html.twig')|raw }}
{% endif %}
</div>
