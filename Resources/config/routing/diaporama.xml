<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_content_diaporama" pattern="/">
        <default key="_controller">PluginsContentBundle:Diaporama:index</default>
    </route>

    <route id="admin_content_diaporama_show" pattern="/{id}/show">
        <default key="_controller">PluginsContentBundle:Diaporama:show</default>
    </route>

    <route id="admin_content_diaporama_new" pattern="/new">
        <default key="_controller">PluginsContentBundle:Diaporama:new</default>
    </route>

    <route id="admin_content_diaporama_create" pattern="/create">
        <default key="_controller">PluginsContentBundle:Diaporama:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_diaporama_edit" pattern="/{id}/edit">
        <default key="_controller">PluginsContentBundle:Diaporama:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_content_diaporama_update" pattern="/{id}/update">
        <default key="_controller">PluginsContentBundle:Diaporama:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_diaporama_delete" pattern="/{id}/delete">
        <default key="_controller">PluginsContentBundle:Diaporama:delete</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_diaporama_show_images_crop" pattern="/{id}/show_images_crop">
        <default key="_controller">PluginsContentBundle:Diaporama:show_images_crop</default>
    </route>

</routes>
