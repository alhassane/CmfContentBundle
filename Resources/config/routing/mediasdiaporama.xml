<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_content_mediasdiaporama" pattern="/">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:index</default>
    </route>

    <route id="admin_content_mediasdiaporama_show" pattern="/{id}/show">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:show</default>
    </route>

    <route id="admin_content_mediasdiaporama_new" pattern="/new">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:new</default>
    </route>

    <route id="admin_content_mediasdiaporama_create" pattern="/create">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_mediasdiaporama_edit" pattern="/{id}/edit">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_content_mediasdiaporama_update" pattern="/{id}/update">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_mediasdiaporama_delete" pattern="/{id}/delete">
        <default key="_controller">PluginsContentBundle:MediasDiaporama:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
