<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_content_test_question" pattern="/">
        <default key="_controller">PluginsContentBundle:TestQuestion:index</default>
    </route>

    <route id="admin_content_test_question_show" pattern="/{id}/show">
        <default key="_controller">PluginsContentBundle:TestQuestion:show</default>
    </route>

    <route id="admin_content_test_question_new" pattern="/new">
        <default key="_controller">PluginsContentBundle:TestQuestion:new</default>
    </route>

    <route id="admin_content_test_question_create" pattern="/create">
        <default key="_controller">PluginsContentBundle:TestQuestion:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_test_question_edit" pattern="/{id}/edit">
        <default key="_controller">PluginsContentBundle:TestQuestion:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_content_test_question_update" pattern="/{id}/update">
        <default key="_controller">PluginsContentBundle:TestQuestion:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_test_question_delete" pattern="/{id}/delete">
        <default key="_controller">PluginsContentBundle:TestQuestion:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
