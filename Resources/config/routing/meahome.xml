<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_content_meahome" pattern="/">
        <default key="_controller">PluginsContentBundle:Meahome:index</default>
    </route>

    <route id="admin_content_meahome_show" pattern="/{id}/show">
        <default key="_controller">PluginsContentBundle:Meahome:show</default>
    </route>

    <route id="admin_content_meahome_new" pattern="/new">
        <default key="_controller">PluginsContentBundle:Meahome:new</default>
    </route>

    <route id="admin_content_meahome_create" pattern="/create">
        <default key="_controller">PluginsContentBundle:Meahome:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_meahome_edit" pattern="/{id}/edit">
        <default key="_controller">PluginsContentBundle:Meahome:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_content_meahome_update" pattern="/{id}/update">
        <default key="_controller">PluginsContentBundle:Meahome:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_meahome_delete" pattern="/{id}/delete">
        <default key="_controller">PluginsContentBundle:Meahome:delete</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_meahome_rub_ajax" pattern="/prov-rub-ajax">
        <default key="_controller">PluginsContentBundle:Meahome:prov_rub_ajax</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
