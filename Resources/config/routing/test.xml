<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_content_test" pattern="/">
        <default key="_controller">PluginsContentBundle:Test:index</default>
    </route>

    <route id="admin_content_test_show" pattern="/{id}/show">
        <default key="_controller">PluginsContentBundle:Test:show</default>
    </route>

    <route id="admin_content_test_new" pattern="/new">
        <default key="_controller">PluginsContentBundle:Test:new</default>
    </route>

    <route id="admin_content_test_create" pattern="/create">
        <default key="_controller">PluginsContentBundle:Test:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_test_edit" pattern="/{id}/edit">
        <default key="_controller">PluginsContentBundle:Test:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_content_test_update" pattern="/{id}/update">
        <default key="_controller">PluginsContentBundle:Test:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_test_delete" pattern="/{id}/delete">
        <default key="_controller">PluginsContentBundle:Test:delete</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_content_test_show_images_crop" pattern="/{id}/show_images_crop">
        <default key="_controller">PluginsContentBundle:Test:show_images_crop</default>
    </route>

</routes>
